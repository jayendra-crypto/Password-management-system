<!-- navbar -->
<%- include('navigation')%>


  <!-- form to add category -->


  
  <div class="container disc">
    <div>
        <h2 class="heading"><%=title %></h2>
        <form class="form-horizontal foram bgcolor" action="/add-new-password" method="POST">
          <% if (msg!='') { %>
            <div class="alert alert-<%= alert %>" role="alert">
                <%= msg %>
              </div>
            <% } %>

            <div class="form-group">
                <label class="control-label col-sm-2">category name:</label>
                <div class="col-sm-10">
                   <select name="pass_category" class="form-control">
                       <option value="">select Password category</option>
                       <% if(records.length>0){
                        records.forEach(function(row){  %>
                       <option value="<%=row.password_category %>"><%=row.password_category %></option>
                       <% })} %>
  
                   </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">password details:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" style="width: 100%; max-width: 100%; max-height: 12px;" rows="5" placeholder="Enter your password details" name="editor1"></textarea>
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default"
                        style="background-color:#337ab7;color: white;">add password</button>

                     <p><a href="/view-all-password"> view all password</a></p>

                </div>

            </div>
        </form>

    </div>
</div>
  






    



